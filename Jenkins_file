#!groovy
pipeline {
    agent any
    stages {
     stage('Build') {
      steps {
       sh 'docker-compose build'
       }
     }
     stage('Up') {
      steps {
        sh 'docker-compose up -d'
      }
     }
     stage('Docker Hub'){
       steps{
     	  withDockerRegistry([ credentialsId: "docker-id", url: "" ]){
     	   sh 'docker push slr1999/chef-book'
 	     }
     }
   }
 }
}
